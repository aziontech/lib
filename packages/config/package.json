{
  "name": "@lib/config",
  "version": "1.0.0",
  "description": "Azion configuration.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "compile": "tsup --config ./tsup.config.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --write .",
    "test": "jest --clearCache && jest -c jest.config.js .",
    "test:watch": "jest -c jest.config.js . --watch",
    "test:coverage": "jest --clearCache && jest -c jest.config.js . --coverage"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./rules": {
      "types": "./dist/rules/index.d.ts",
      "require": "./dist/rules/index.cjs",
      "import": "./dist/rules/index.js"
    }
  },
  "author": "aziontech",
  "license": "MIT",
  "files": [
    "dist",
    "package.json"
  ],
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-keywords": "^5.1.0",
    "mathjs": "^13.1.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^22.13.1",
    "@types/tmp": "^0.2.6",
    "jest": "^29.7.0",
    "mock-fs": "^5.5.0",
    "tmp": "^0.2.5",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2"
  }
}
