{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "azion": ["../client/src/index.ts"],
      "azion/presets": ["../presets/src/index.ts"]
    }
  }
}
