{
  "entry": ["src/index.ts"],
  "format": ["cjs", "esm"],
  "splitting": true,
  "sourcemap": false,
  "clean": true,
  "bundle": true,
  "dts": true,
  "minify": true,
  "minifyWhitespace": true,
  "external": [
    "./build/module",
    "./.wasm-bindgen/azion_rust_edge_function",
    "./.wasm-bindgen/azion_rust_edge_function_bg.wasm",
    "signale",
    "fast-glob",
    "mime-types",
    "path"
  ],
  "ignoreWarnings": [
    {
      "code": "direct-eval",
      "message": "Using direct eval with a bundler is not recommended and may cause problems"
    }
  ]
}
