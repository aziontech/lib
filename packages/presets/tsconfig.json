{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "azion": ["../client/src/index.ts"],
      "azion/sql": ["../sql/src/index.ts"],
      "azion/storage": ["../storage/src/index.ts"],
      "azion/purge": ["../purge/src/index.ts"],
      "azion/config": ["../config/src/index.ts"],
      "azion/domains": ["../domains/src/index.ts"],
      "azion/applications": ["../applications/src/index.ts"],
      "azion/ai": ["../ai/src/index.ts"]
    }
  },
  "exclude": ["src/presets/**/handler.ts"]
}
